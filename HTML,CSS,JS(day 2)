<!DOCTYPE html>
<html>
<head>
    <title>This is Title</title>
    <link rel="stylesheet" href="./style.css">
    <script>
        document.write("Nakul V ");

        function printHello() {
            var name = document.getElementById("name").value;
            console.log("Arrow function");
        }

        function addNumber() {
            let num1 = parseInt(document.getElementById("firstNumber").value);
            let num2 = parseInt(document.getElementById("secondNumber").value);
            let result = num1 + num2;
            let res = document.getElementById("res");
            res.innerText = result;
        }

        function displayName() {
            let username = document.getElementById("name1").value;
            let res = document.getElementById("res");
            res.innerText = username;
        }

        function convertToUpperCase() {
            let username = document.getElementById("name1").value;
            let res = document.getElementById("res");
            res.innerText = username.toLowerCase();
        }

        function concatStrings() {
            let username1 = document.getElementById("name1").value;
            let username2 = document.getElementById("name2").value;
            let res = document.getElementById("res");
            res.innerText = username1+ username2;
        }

        function getLength() {
            let username1 = document.getElementById("name1").value;
            let res = document.getElementById("res");
            res.innerText = username1.length;
        }

        function changeToColor(color) {
            document.body.style.backgroundColor = color;
        }
    </script>
</head>
<body>
    <br>
    <label for="name1">Name 1</label>
    <input type="text" id="name1" placeholder="Enter your name 1">
    <input type="text" id="name2" placeholder="Enter your name 2">
    <button onclick="displayName()">Display Name</button>
    <button onclick="convertToUpperCase()">Convert to Lowercase</button>
    <button onclick="concatStrings()">Concat</button>
    <button onclick="getLength()">Get Length</button>
    <br><br>
    <input type="number" id="firstNumber" placeholder="Enter first number">
    <input type="number" id="secondNumber" placeholder="Enter second number">
    <br>
    <button onclick="addNumber()">Add</button>
    <h1 id="res"></h1>
    <button onclick="changeToColor('black')">Black</button>
    <button onclick="changeToColor('red')">Red</button>
    <button onclick="changeToColor('white')">White</button>
    <button onclick="changeToColor('pink')">Pink</button>
</body>
</html>
